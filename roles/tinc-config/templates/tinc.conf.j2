##
# {{ ansible_managed }}

Name = {{ tinc_host }}
BindToAddress = * 23001

#Device = /dev/net/tun
DeviceType = tap
AddressFamily = ipv4
#Interface = tun0
Mode = switch

DirectOnly = no
Broadcast = mst
DecrementTTL = no
LocalDiscovery = yes

{% for host in groups['all'] %}
{% if inventory_hostname != hostvars[host]['inventory_hostname'] and hostvars[host]['ansible_ssh_host'] is defined %}
ConnectTo = {{ hostvars[host]['inventory_hostname'] | replace(".", "_") }}
{% endif %}
{% endfor %}
